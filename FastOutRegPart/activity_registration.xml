<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.fastoutalpha.RegistrationActivity">

    <TextView
        android:id="@+id/nameprompt"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:text="@string/namePrompt"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/regName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nameprompt"
        android:layout_alignStart="@+id/nameprompt"
        android:layout_alignEnd="@+id/nameprompt"
        android:layout_alignRight="@+id/nameprompt"
        android:layout_below="@+id/nameprompt"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/emailPrompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/regName"
        android:layout_alignLeft="@id/regName"
        android:layout_alignStart="@id/regName"
        android:layout_alignEnd="@+id/nameprompt"
        android:layout_alignRight="@+id/nameprompt"
        android:text="@string/Email"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/regEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@id/emailPrompt"
        android:layout_alignLeft="@id/regName"
        android:layout_alignStart="@id/regName"
        android:layout_alignEnd="@id/regName"
        android:inputType="textEmailAddress"
        android:layout_alignRight="@id/regName"/>

    <TextView
        android:id="@+id/usernamePrompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/regEmail"
        android:layout_alignLeft="@id/regName"
        android:layout_alignStart="@id/regName"
        android:layout_alignEnd="@+id/nameprompt"
        android:layout_alignRight="@+id/nameprompt"
        android:text="@string/Username"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/regUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@id/usernamePrompt"
        android:layout_alignLeft="@id/regName"
        android:layout_alignStart="@id/regName"
        android:layout_alignEnd="@id/regName"
        android:inputType="textPersonName"
        android:layout_alignRight="@id/regName"/>

    <TextView
        android:id="@+id/passwordPrompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/regUsername"
        android:layout_alignLeft="@id/regName"
        android:layout_alignStart="@id/regName"
        android:layout_alignEnd="@+id/usernamePrompt"
        android:layout_alignRight="@+id/usernamePrompt"
        android:text="@string/Password"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/regPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@id/passwordPrompt"
        android:layout_alignLeft="@id/regName"
        android:layout_alignStart="@id/regName"
        android:inputType="textPassword"
        android:layout_alignEnd="@id/regName"
        android:layout_alignRight="@id/regName"/>
    <TextView
        android:id="@+id/CpasswordPrompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/regPassword"
        android:layout_alignLeft="@id/regName"
        android:layout_alignStart="@id/regName"
        android:text="@string/CPassword"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/CregPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@id/CpasswordPrompt"
        android:layout_alignLeft="@id/regName"
        android:layout_alignStart="@id/regName"
        android:inputType="textPassword"
        android:layout_alignEnd="@id/regName"
        android:layout_alignRight="@id/regName"/>
    <TextView
        android:id="@+id/PromptID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/CregPassword"
        android:textSize="18sp"
        android:layout_alignLeft="@id/regName"
        android:layout_alignStart="@id/regName"
        android:text="@string/ID"
        />
    <EditText
        android:id="@+id/regID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/PromptID"
        android:layout_alignEnd="@id/regName"
        android:layout_alignRight="@id/regName"
        android:inputType="textVisiblePassword"
        android:layout_alignLeft="@id/regName"
        android:layout_alignStart="@id/regName"/>
    <Button
        android:id="@+id/regBut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/regID"
        android:layout_alignLeft="@id/regID"
        android:layout_alignStart="@id/regID"
        android:layout_alignEnd="@id/regID"
        android:layout_alignRight="@id/regID"
        android:text="@string/Register"/>

</RelativeLayout>
